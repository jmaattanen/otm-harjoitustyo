<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jm.transcribebuddy.gui.ConstantTextController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <Button mnemonicParsing="false" onAction="#openAudioFile" text="Aloita" BorderPane.alignment="TOP_LEFT">
               <BorderPane.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </BorderPane.margin>
            </Button>
         </top>
         <right>
            <Button mnemonicParsing="false" onAction="#switchToLBLS" text="Rivinäkymä" BorderPane.alignment="BOTTOM_RIGHT">
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </BorderPane.margin>
            </Button>
         </right>
         <center>
            <TextArea fx:id="workArea" prefHeight="200.0" prefWidth="200.0" wrapText="true" BorderPane.alignment="TOP_LEFT" />
         </center>
         <bottom>
            <VBox prefHeight="84.0" prefWidth="175.0">
             <children>
                 <Label fx:id="audioNameLabel" BorderPane.alignment="TOP_LEFT" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#seekBeginning" text="Alkuun">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#skipBackward" text="&lt;&lt;">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#stopAudio" text="Pause">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#playAudio" text="Play">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#skipForward" text="&gt;&gt;">
                           <HBox.margin>
                              <Insets left="2.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
             </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
