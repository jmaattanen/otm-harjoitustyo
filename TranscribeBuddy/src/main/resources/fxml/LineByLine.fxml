<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jm.transcribebuddy.gui.LineByLineController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox prefHeight="50.0" prefWidth="400.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="50.0" prefWidth="400.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#openAudioFile" text="Aloita" BorderPane.alignment="TOP_LEFT">
                           <BorderPane.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </BorderPane.margin>
                           <HBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#openFile" text="Avaa">
                           <HBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#saveToFile" text="Tallenna">
                           <HBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Label fx:id="projectNameLabel" alignment="BOTTOM_RIGHT" prefWidth="300.0" text="Project Name">
                           <padding>
                              <Insets right="10.0" top="10.0" />
                           </padding>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#editProjectInfo" text="Info">
                           <HBox.margin>
                              <Insets bottom="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label alignment="BOTTOM_RIGHT" text="Merkki">
                           <padding>
                              <Insets top="5.0" />
                           </padding>
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin></Label>
                        <TextField fx:id="startTimeField" editable="false" maxWidth="60.0" prefWidth="60.0" />
                        <Button mnemonicParsing="false" onAction="#setStartTime" text="Aseta">
                           <HBox.margin>
                              <Insets left="1.0" />
                           </HBox.margin></Button>
                        <Label alignment="BOTTOM_RIGHT" prefWidth="100.0" text="Alaluokka">
                           <padding>
                              <Insets top="5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="subcategoryField" prefWidth="180.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>
         <right>
            <VBox prefHeight="600.0" prefWidth="140.0" BorderPane.alignment="BOTTOM_RIGHT">
               <children>
                  <Region prefHeight="200.0" prefWidth="140.0" />
                  <Button mnemonicParsing="false" onAction="#deleteStatement" text="Poista virke">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#splitStatement" text="Katkaise virke">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#selectPrevStatement" text="Edellinen">
                     <VBox.margin>
                        <Insets bottom="2.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#selectNextStatement" text="Seuraava">
                     <VBox.margin>
                        <Insets bottom="2.0" top="2.0" />
                     </VBox.margin>
                  </Button>
                   <Button mnemonicParsing="false" onAction="#endStatement" text="Päätä virke">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></Button>
                  <Region prefHeight="300.0" prefWidth="140.0" />
                  <Button mnemonicParsing="false" onAction="#switchToCTS" text="Tekstinäkymä" BorderPane.alignment="BOTTOM_RIGHT">
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                     <VBox.margin>
                        <Insets bottom="4.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#switchToOS" text="Hakunäkymä" BorderPane.alignment="BOTTOM_RIGHT">
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </right>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <TextArea fx:id="prevArea" maxHeight="200.0" prefHeight="100.0" prefWidth="200.0" wrapText="true">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin></TextArea>
                  <TextArea fx:id="workArea" maxHeight="200.0" prefHeight="100.0" prefWidth="200.0" wrapText="true">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin></TextArea>
                  <TextArea fx:id="nextArea" maxHeight="200.0" prefHeight="100.0" prefWidth="200.0" wrapText="true">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin></TextArea>
               </children>
            </VBox>
         </center>
         <bottom>
            <VBox prefHeight="84.0" prefWidth="175.0">
             <children>
                 <Label fx:id="audioNameLabel" BorderPane.alignment="TOP_LEFT">
                     <padding>
                        <Insets left="10.0" />
                     </padding></Label>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#seekBeginning" text="Toista merkistä">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#skipBackward" text="&lt;&lt;">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#stopAudio" text="Pause">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#playAudio" text="Play">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#skipForward" text="&gt;&gt;">
                           <HBox.margin>
                              <Insets left="2.0" right="2.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
             </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
